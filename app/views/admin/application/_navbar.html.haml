%header.topnav.nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      .navbar-brand
        = link_to "jibjob admin", root_path, class: "navlogo"
    %ul.nav.navbar-nav
      %li= link_to "Users", admin_users_url
    - if current_user
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Logged in as #{current_user.username}", user_url(current_user)
        %li= link_to "Log out", logout_sessions_url
    - else
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "Sign up", new_user_url
        %li= link_to "Sign in", new_session_url