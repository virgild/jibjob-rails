.page
  .signup.container-fluid
    .row
      .col-md-12
        .form-container.center-block
          %h1 Sign up
          = form_for @user do |f|
            .form-group
              = f.label :username
              = f.text_field :username, class: "form-control", spellcheck: false
            .form-group
              = f.label :email
              = f.text_field :email, class: "form-control", spellcheck: false
            .form-group
              = f.label :password
              = f.password_field :password, class: "form-control"
            .form-group
              = f.label :password_confirmation, "Confirm password"
              = f.password_field :password_confirmation, class: "form-control"
            = f.submit "Submit"