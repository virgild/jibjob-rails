- content_for :body_javascript do
  = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js"

.new-resume-page.page
  %ol.breadcrumb
    %li= link_to "My Resumes", user_resumes_url(current_user)
    %li New Resume
  .container
    %h3 New Resume
  #resume_form

- content_for :body_javascript do
  :javascript
    $(function(){
      var formOpts = {
        resume: #{@resume_data},
        saveURL: "#{user_resumes_url(current_user)}",
        saveMethod: 'POST',
        usePlainEditor: #{@use_plain_editor},
        sampleURL: "#{asset_url('sample-resume.txt')}",
        nameMaxLength: #{Resume::NAME_MAX_LENGTH},
        slugMaxLength: #{Resume::SLUG_MAX_LENGTH},
        getStartedURL: "#{get_started_url}",
        showExampleLoader: true,
        themes: #{Themes.list}
      };

      React.render(React.createElement(JibJob.ResumeForm, formOpts), document.getElementById("resume_form"));
    });
