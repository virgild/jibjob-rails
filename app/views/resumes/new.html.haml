.page
  .page-header
    .container-fluid
      %h1 New Resume

  .container-fluid
    - if @resume.errors.any?
      %ul
        - @resume.errors.full_messages.each do |msg|
          %li= msg

    = form_for [current_user, @resume] do |f|
      .form-group
        = f.label :name
        = f.text_field :name, class: "form-control"
      .form-group
        = f.label :content
        = f.text_area :content, class: "form-control", size: "25x10"
      = f.submit "Submit"