.header
  %h1.full_name= resume.structure['full_name']
  .address= resume.structure['address1']
  .address= resume.structure['address2']
  .telephone= resume.structure['telephone']
  .email= resume.structure['email']
  .website= resume.structure['website']
.sections
  - resume.structure['sections'].each do |section|
    .section
      %h1.section__title= section['title']
      - if section['para']
        .para= section['para']
      - if section['items']
        %ul.section__items
          - section['items'].each do |item|
            %li= item['text']
      - if section['periods']
        .periods
          - section['periods'].each do |period|
            .period
              %h2.period__title= period['title']
              - if period['organization']
                .period__organization= period['organization']
              - if period['location']
                .period__location= period['location']
              - if period['dtend'] && period['dtstart']
                .period_dt #{period['dtstart']} - #{period['dtend']}
              - elsif period['dtstart']
                .period_dt= period['dtstart']
              - if period['items']
                %ul.period__items
                  - period['items'].each do |item|
                    %li= item['text']